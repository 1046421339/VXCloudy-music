/* 顶部歌单信息容器，使用高斯模糊加上透明度 */
.detail-container{
  height: 320rpx;
  filter: blur(40rpx);
  opacity: 0.4;
}

/* 顶部歌单信息遮罩层，高度和背景图一直，Z轴方向处于背景图下方，形成一种毛玻璃效果 */
.detail-mask{
  position: absolute;
  width: 100%;
  height: 320rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;
}

/* 详情信息容器，flex布局，绝对定位在吸顶位置，垂直方向(次轴)居中，水平方向（主轴）左对齐*/
.detail-info{
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 320rpx;
  padding:20rpx;
  box-sizing: border-box;
  align-items: center;
}

/* 左边的图片*/
.detail-img{
  width: 280rpx;
  height: 280rpx;
  margin-right: 24rpx;
  border-radius: 6rpx;
}

/* 右边的文字*/
.detail-name{
  color: #ffffff;
  font-size: 36rpx;
  line-height: 1.5;
  font-weight: 400;
}

/* 歌曲容器 */
.musiclist-container{
  display: flex;
  padding:14rpx 20rpx;
  align-items: center;
}

/* 右侧歌曲编号 */
.musiclist-index{
  color:#888;
  font-size : 34rpx;
  width:80rpx
}

/* 右侧歌曲信息 */
.musiclist-info{
  flex-grow: 1;
  width: 0;
}

/* 歌名，不换行 */
.musiclist-name{
  font-size: 34rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
}

/* 歌手 */
.musiclist-singer{
  font-size: 24rpx;
  color: #888;
}